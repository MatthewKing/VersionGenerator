<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net5.0;net6.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>VersionGenerator.Tool</PackageId>
    <Title>VersionGenerator Tool</Title>
    <Description>Generate version numbers in a variety of formats.</Description>
    <Authors>Matthew King</Authors>
    <Copyright>Copyright 2019-2021 Matthew King.</Copyright>
    <PackageProjectUrl>https://github.com/MatthewKing/VersionGenerator</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>version</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>vgen</ToolCommandName>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\VersionGenerator\VersionGenerator.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.3.0" />
  </ItemGroup>

</Project>
